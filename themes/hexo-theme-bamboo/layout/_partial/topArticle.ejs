<%
  var hashCode = function (str) {
      if (!str && str.length === 0) {
          return 0;
      }

      var hash = 0;
      for (var i = 0, len = str.length; i < len; i++) {
          hash = ((hash << 5) - hash) + str.charCodeAt(i);
          hash |= 0;
      }
      return hash;
  };
%>

<% if (page.current === 1 && theme.topArticle.on === true) { %>
<div class="topArticle reveal">
	<h3><i class="fas fa-thumbs-o-up" aria-hidden="true"></i><%= __('recommendedArticles') %></h3>
	<div class="articles">
		<% site.posts.sort('-date').each(function (post, i) { %>
			<% if(post.top) { %>
				<div class="article-link">
					<%
						var img = 'https://ssyerv1.oss-cn-hangzhou.aliyuncs.com/picture/ada660a8c596431983dddd411a12f2b3.jpg!sswm';
						var imgs = theme.imgs;
						if (!imgs || imgs.length === 0) {
							return img;
						}
						img = imgs[Math.abs(hashCode(post.title) % imgs.length)]
					%>
					<div class="article" style="background-size: cover; 
						background-position: center center;">
						<img class="lazyload" src="<%- url_for(post.img  || post.swiperImg || img) %>" alt="">
					</div>
					<div class="text">
						<div class="text-main">
							<div class="title"><a href="<%- url_for(post.path) %>"><%= post.title %></a></div>
							<div class="content">
								<%- post.excerpt || strip_html(post.content).substring(0, 60) %>
							</div>
						</div>
						<a href="<%- url_for(post.path) %>" class="more">
							<i class="fas fa-eye" aria-hidden="true"></i><%= __('readMore') %>
						</a>
					</div>
				</div>
			<% } %>
		<% }) %>
	</div>
</div>
<% } %>