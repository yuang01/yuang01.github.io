.post-detail .checkbox
  display: flex
  align-items: center
  margin-top: 1em
  margin-bottom: 1em
  &+.checkbox
    margin-top: 0 - 1em
  input
    transform: translate(0, -1px)
    -webkit-appearance: none
    -moz-appearance: none
    -ms-appearance: none
    -o-appearance: none
    appearance: none
    position: relative
    height: 16px
    width: 16px
    transition: all .15s ease-out 0s
    cursor: pointer
    display: inline-block
    outline: none
    border-radius: 2px
    flex-shrink: 0
    margin-right: 8px
    // pointer-events: none
    // if hexo-config('tag_plugins.checkbox.interactive') != true
    //   pointer-events: none
  /* Checkbox */
  input[type=checkbox]
    &:before, &:after
      position: absolute
      content: ""
      background: #fff
    &:before
      left: 1px
      top: 5px
      width: 0px
      height: 2px
      transition: all .2s ease-in
      transform: rotate(45deg)
      -webkit-transform: rotate(45deg)
      -moz-transform: rotate(45deg)
      -ms-transform: rotate(45deg)
      -o-transform: rotate(45deg)
    &:after
      right: 7px
      bottom: 3px
      width: 2px
      height: 0px
      transition: all .2s ease-out
      transform: rotate(40deg)
      -webkit-transform: rotate(40deg)
      -moz-transform: rotate(40deg)
      -ms-transform: rotate(40deg)
      -o-transform: rotate(40deg)
      transition-delay: .25s
    &:checked
      &:before
        left: 0px
        top: 7px
        width: 6px
        height: 2px
      &:after
        right: 3px
        bottom: 1px
        width: 2px
        height: 10px
  &.minus input[type=checkbox]
    &:before
      transform: rotate(0)
      left: 1px
      top: 5px
      width: 0px
      height: 2px
    &:after
      transform: rotate(0)
      left: 1px
      top: 5px
      width: 0px
      height: 2px
    &:checked
      &:before
        left: 1px
        top: 5px
        width: 10px
        height: 2px
      &:after
        left: 1px
        top: 5px
        width: 10px
        height: 2px
  &.plus input[type=checkbox]
    &:before
      transform: rotate(0)
      left: 1px
      top: 5px
      width: 0px
      height: 2px
    &:after
      transform: rotate(0)
      left: 5px
      top: 1px
      width: 2px
      height: 0px
    &:checked
      &:before
        left: 1px
        top: 5px
        width: 10px
        height: 2px
      &:after
        left: 5px
        top: 1px
        width: 2px
        height: 10px
  &.times input[type=checkbox]
    &:before
      transform: rotate(45deg)
      left: 3px
      top: 1px
      width: 0px
      height: 2px
    &:after
      transform: rotate(135deg)
      right: 3px
      top: 1px
      width: 0px
      height: 2px
    &:checked
      &:before
        left: 1px
        top: 5px
        width: 10px
        height: 2px
      &:after
        right: 1px
        top: 5px
        width: 10px
        height: 2px
  /* Radio */
  input[type=radio]
    border-radius: 50%
    &:before
      content: ""
      display: block
      width: 8px
      height: 8px
      border-radius: 50%
      margin: 2px
      transform: scale(0)
      transition: all .25s ease-out
    &:checked:before
      transform: scale(1)
  /* Colors */
  input
    $c = $color-primary
    border: 2px solid $c
    &[type=checkbox]:checked
      background: $c
    &[type=radio]:checked:before
      background: $c
  &.red input
    border-color: $color-tag-red
    &[type=checkbox]:checked
      background: $color-tag-red
    &[type=radio]:checked:before
      background: $color-tag-red
  &.green input
    border-color: $color-tag-green
    &[type=checkbox]:checked
      background: $color-tag-green
    &[type=radio]:checked:before
      background: $color-tag-green
  &.yellow input
    border-color: $color-tag-yellow - 4 * 8% + 1 * .5deg
    &[type=checkbox]:checked
      background: $color-tag-yellow - 4 * 8% + 1 * .5deg
    &[type=radio]:checked:before
      background: $color-tag-yellow - 4 * 8% + 1 * .5deg
  &.cyan input
    border-color: $color-tag-cyan
    &[type=checkbox]:checked
      background: $color-tag-cyan
    &[type=radio]:checked:before
      background: $color-tag-cyan
  &.blue input
    border-color: $color-tag-blue
    &[type=checkbox]:checked
      background: $color-tag-blue
    &[type=radio]:checked:before
      background: $color-tag-blue
  &.warning input
    border-color: $color-warning
    &[type=checkbox]:checked
      background: $color-warning
    &[type=radio]:checked:before
      background: $color-warning
  &.success input
    border-color: $color-success
    &[type=checkbox]:checked
      background: $color-success
    &[type=radio]:checked:before
      background: $color-success
  &.danger input
    border-color: $color-danger
    &[type=checkbox]:checked
      background: $color-danger
    &[type=radio]:checked:before
      background: $color-danger
  &.info input
    border-color: $color-info
    &[type=checkbox]:checked
      background: $color-info
    &[type=radio]:checked:before
      background: $color-info

article .checkbox
  p
    display: inline-block
    margin-top: 0 !important
    margin-bottom: 0 !important
